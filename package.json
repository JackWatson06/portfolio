{
  "name": "portfolio",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "npm run migrate && next start",
    "lint": "next lint",
    "migrate": "tsx services/db/migrate.ts",
    "test:client:unit": "jest --config jest.client.config.ts --testPathPattern=/__tests__/client/unit/",
    "test:client:int": "jest --config jest.client.config.ts --testPathPattern=/__tests__/client/integration/",
    "test:server:unit": "jest --config jest.server.config.ts --testPathPattern=/__tests__/server/unit/",
    "test:server:int": "jest --config jest.server.config.ts --testPathPattern=/__tests__/server/integration/",
    "test:edge:unit": "jest --config jest.edge.config.ts --testPathPattern=/__tests__/edge/unit/",
    "test:edge:int": "jest --config jest.edge.config.ts --testPathPattern=/__tests__/edge/integration/",
    "test:client:watch": "jest --config jest.client.config.ts --watch",
    "test:server:watch": "jest --config jest.server.config.ts --watch",
    "test:edge:watch": "jest --config jest.edge.config.ts --watch",
    "test:unit": "npm run test:client:unit && npm run test:server:unit && npm run test:edge:unit",
    "test:int": "npm run test:client:int && npm run test:server:int && npm run test:edge:int",
    "test": "npm run test:unit && npm run test:int"
  },
  "dependencies": {
    "@edge-runtime/jest-environment": "^4.0.0",
    "@edge-runtime/jest-expect": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@tailwindcss/postcss": "^4.0.14",
    "@tailwindcss/typography": "^0.5.15",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.3",
    "dotenv-expand": "^12.0.1",
    "jose": "^5.9.4",
    "mongodb": "^6.5.0",
    "next": "^15.1.0",
    "pino": "^9.0.0",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.14",
    "tsx": "^4.7.3",
    "typescript": "^5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "^9.1.0",
    "html-validate": "^9.1.3",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "ts-node": "^10.9.2"
  }
